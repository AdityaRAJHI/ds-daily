---
    import '@fontsource/inter';

    interface Props {
      title: string;
    }

    const { title } = Astro.props;
    ---

    <!doctype html>
    <html lang="en">
      <head>
        <meta charset="UTF-8" />
        <meta name="description" content="DS Daily - Learn data science concepts daily" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
      </head>
      <body class="bg-white">
        <header class="border-b">
          <nav class="max-w-6xl mx-auto px-4 py-5 flex justify-between items-center">
            <a href="/" class="text-2xl font-bold text-gray-900">DS Daily</a>
            <div class="flex items-center gap-8">
              <a href="/sponsor" class="text-gray-600 hover:text-gray-900 font-medium">Sponsor</a>
              <a href="/newsletter" class="text-gray-600 hover:text-gray-900 font-medium">Newsletter</a>
              <div class="relative group">
                <button class="text-gray-600 hover:text-gray-900 font-medium flex items-center gap-1">
                  More
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
                  </svg>
                </button>
                <div class="absolute right-0 top-full mt-2 w-48 bg-white border rounded-lg shadow-lg hidden group-hover:block">
                  <a href="/about" class="block px-4 py-2 text-gray-700 hover:bg-gray-50">
                    About
                    <p class="text-sm text-gray-500">Learn more about our mission and team.</p>
                  </a>
                  <a href="/contact" class="block px-4 py-2 text-gray-700 hover:bg-gray-50">
                    Contact
                    <p class="text-sm text-gray-500">Get in touch with us for any inquiries.</p>
                  </a>
                  <a href="/privacy" class="block px-4 py-2 text-gray-700 hover:bg-gray-50">
                    Privacy Policy
                    <p class="text-sm text-gray-500">Read our privacy policy.</p>
                  </a>
                  <a href="/docs" class="block px-4 py-2 text-gray-700 hover:bg-gray-50">
                    Documentation
                    <p class="text-sm text-gray-500">Explore our documentation.</p>
                  </a>
                </div>
              </div>
              <div class="flex items-center gap-4">
                <div class="relative">
                  <input
                    type="text"
                    placeholder="Search..."
                    id="search-input"
                    class="px-3 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                  />
                  <div id="search-results" class="absolute left-0 top-full mt-2 w-64 bg-white border rounded-lg shadow-lg hidden">
                    <ul class="p-2" id="search-results-list">
                    </ul>
                  </div>
                </div>
                <a href="/login" class="text-gray-600 hover:text-gray-900 font-medium">Sign in</a>
                <a href="/register" class="bg-primary text-white px-4 py-2 rounded-lg font-medium hover:bg-blue-700 transition-colors">
                  Get Started
                </a>
              </div>
            </div>
          </nav>
        </header>
        <slot />
        <footer class="bg-gray-900 text-white mt-20">
          <div class="max-w-6xl mx-auto px-4 py-12 grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="flex flex-col gap-4">
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-4.037m-7.5-4.037c-1.07-5.982-6.807-10-12.584-10a1.126 1.126 0 00-1.125 1.125m12.584 8.863c1.07-5.982 6.807-10 12.584-10a1.121 1.121 0 011.124 1.124m-12.584 8.863c-1.07-5.982-6.807-10-12.584-10m12.584 8.863c1.07-5.982 6.807-10 12.584-10a1.121 1.121 0 011.124 1.124" />
                </svg>
                <span class="text-xl font-bold">DS Daily</span>
              </div>
              <p class="text-gray-400">
                A daily column with insights, observations, tutorials, and best practices on python and data science. Read by industry professionals at big tech, startups, and engineering students, across:
              </p>
              <div class="flex gap-4">
                <a href="#" class="text-gray-400 hover:text-gray-300">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-5 h-5">
                    <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/>
                  </svg>
                </a>
                <a href="#" class="text-gray-400 hover:text-gray-300">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-5 h-5">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19v-13h-3v13h3zm-1.5-15.5c.829 0 1.5.672 1.5 1.5s-.671 1.5-1.5 1.5-1.5-.672-1.5-1.5.671-1.5 1.5-1.5zm13.5 15.5v-7.5c0-1.5-1.24-2.5-2.5-2.5-1.26 0-2.06.75-2.06 2.5v7.5h-3v-13h3v2.5c0 1.5 1.24 2.5 2.5 2.5 1.26 0 2.06-.75 2.06-2.5v-2.5h3v13z"/>
