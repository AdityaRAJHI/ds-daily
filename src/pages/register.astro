---
    import '@fontsource/inter';

    interface Props {
      title: string;
    }

    const { title } = Astro.props;
    ---

    <!doctype html>
    <html lang="en">
      <head>
        <meta charset="UTF-8" />
        <meta name="description" content="DS Daily - Learn data science concepts daily" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
      </head>
      <body class="bg-white">
        <header class="border-b">
          <nav class="max-w-6xl mx-auto px-4 py-5 flex justify-between items-center">
            <a href="/" class="text-2xl font-bold text-gray-900">DS Daily</a>
            <div class="flex items-center gap-8">
              <a href="/sponsor" class="text-gray-600 hover:text-gray-900 font-medium">Sponsor</a>
              <a href="/newsletter" class="text-gray-600 hover:text-gray-900 font-medium">Newsletter</a>
              <div class="relative group">
                <button class="text-gray-600 hover:text-gray-900 font-medium flex items-center gap-1">
                  More
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
                  </svg>
                </button>
                <div class="absolute right-0 top-full mt-2 w-48 bg-white border rounded-lg shadow-lg hidden group-hover:block">
                  <a href="/about" class="block px-4 py-2 text-gray-700 hover:bg-gray-50">
                    About
                    <p class="text-sm text-gray-500">Learn more about our mission and team.</p>
                  </a>
                  <a href="/contact" class="block px-4 py-2 text-gray-700 hover:bg-gray-50">
                    Contact
                    <p class="text-sm text-gray-500">Get in touch with us for any inquiries.</p>
                  </a>
                  <a href="/privacy" class="block px-4 py-2 text-gray-700 hover:bg-gray-50">
                    Privacy Policy
                    <p class="text-sm text-gray-500">Read our privacy policy.</p>
                  </a>
                </div>
              </div>
              <div class="flex items-center gap-4">
                <div class="relative">
                  <input
                    type="text"
                    placeholder="Search..."
                    id="search-input"
                    class="px-3 py-2 border rounded-full focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                  />
                  <div id="search-results" class="absolute left-0 top-full mt-2 w-64 bg-white border rounded-lg shadow-lg hidden">
                    <ul class="p-2" id="search-results-list">
                    </ul>
                  </div>
                </div>
                <a href="/login" class="text-gray-600 hover:text-gray-900 font-medium">Sign in</a>
                <a href="/register" class="bg-primary text-white px-4 py-2 rounded-lg font-medium hover:bg-blue-700 transition-colors">
                  Get Started
                </a>
              </div>
            </div>
          </nav>
        </header>
        <slot />
        <footer class="bg-gray-50 mt-20">
          <div class="max-w-6xl mx-auto px-4 py-12">
            <div class="mb-8">
              <select class="px-4 py-2 border rounded-full text-gray-700 bg-white hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                <option>All categories</option>
                <option>Python</option>
                <option>Machine Learning</option>
                <option>Data Science</option>
                <option>Statistics</option>
              </select>
            </div>

            <div class="grid gap-8">
              <article class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                <div class="flex gap-4 items-start">
                  <div class="flex-1">
                    <div class="flex items-center gap-4 mb-4">
                      <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm">LLMs</span>
                      <span class="text-gray-500">Jan 12, 2024</span>
                      <span class="mx-2">•</span>
                      <span class="text-gray-500">17 min read</span>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900 mb-3">
                      <a href="/blog/llm-evaluation" class="hover:text-primary">
                        A Practical Guide to Integrate Evaluation and Observability into LLM Apps
                      </a>
                    </h2>
                    <p class="text-gray-600 mb-4">
                      A comprehensive guide to Opik, an open-source LLM evaluation and observability framework.
                    </p>
                    <div class="flex items-center gap-2">
                      <div class="flex -space-x-2">
                        <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=Avi" alt="Avi Chawla" class="w-8 h-8 rounded-full border-2 border-white" />
                        <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=Akshay" alt="Akshay Pachaar" class="w-8 h-8 rounded-full border-2 border-white" />
                      </div>
                                      <span class="text-gray-700">Raj Kumar Sinha </span>
                    </div>
                  </div>
                  <img src="https://placehold.co/200x150" alt="Article thumbnail" class="w-48 h-36 object-cover rounded-lg" />
                </div>
              </article>

              <article class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                <div class="flex gap-4 items-start">
                  <div class="flex-1">
                    <div class="flex items-center gap-4 mb-4">
                      <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm">RAG</span>
                      <span class="text-gray-500">Jan 5, 2024</span>
                      <span class="mx-2">•</span>
                      <span class="text-gray-500">26 min read</span>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900 mb-3">
                      <a href="/blog/rag-systems" class="hover:text-primary">
                        A Crash Course on Building RAG Systems – Part 9 (With Implementation)
                      </a>
                    </h2>
                    <p class="text-gray-600 mb-4">
                      A deep dive into ColPali for building vision-driven RAG systems (with implementation).
                    </p>
                    <div class="flex items-center gap-2">
                      <div class="flex -space-x-2">
                        <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=Avi" alt="Avi Chawla" class="w-8 h-8 rounded-full border-2 border-white" />
                        <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=Akshay" alt="Akshay Pachaar" class="w-8 h-8 rounded-full border-2 border-white" />
                      </div>
                                      <span class="text-gray-700">Raj Kumar Sinha </span>
                    </div>
                  </div>
                  <img src="https://placehold.co/200x150" alt="Article thumbnail" class="w-48 h-36 object-cover rounded-lg" />
                </div>
              </article>
            </div>

            <div class="mt-12 pt-8 border-t">
              <p class="text-center text-gray-600">© 2024 DS Daily. All rights reserved.</p>
            </div>
          </div>
        </footer>
        <script>
          const searchInput = document.getElementById('search-input');
          const searchResults = document.getElementById('search-results');
          const searchResultsList = document.getElementById('search-results-list');

          const allArticles = [
            { title: '10 Python Tips for Data Scientists', url: '/blog/python-tips' },
            { title: 'Understanding Machine Learning Basics', url: '/blog/ml-basics' },
            { title: 'Essential Statistics for Data Science', url: '/blog/statistics' },
            { title: 'A Practical Guide to Integrate Evaluation and Observability into LLM Apps', url: '/blog/llm-evaluation' },
            { title: 'A Crash Course on Building RAG Systems – Part 9 (With Implementation)', url: '/blog/rag-systems' },
          ];

          searchInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const filteredArticles = allArticles.filter(article =>
              article.title.toLowerCase().includes(searchTerm)
            );

            searchResultsList.innerHTML = '';

            if (filteredArticles.length > 0) {
              filteredArticles.forEach(article => {
                const li = document.createElement('li');
                const a = document.createElement('a');
                a.href = article.url;
                a.textContent = article.title;
                a.classList.add('block', 'px-4', 'py-2', 'text-gray-700', 'hover:bg-gray-50');
                li.appendChild(a);
                searchResultsList.appendChild(li);
              });
              searchResults.classList.remove('hidden');
            } else {
              const li = document.createElement('li');
              li.textContent = 'No results found';
              li.classList.add('block', 'px-4', 'py-2', 'text-gray-700');
              searchResultsList.appendChild(li);
              searchResults.classList.remove('hidden');
            }

            if (searchTerm === '') {
              searchResults.classList.add('hidden');
            }
          });

          document.addEventListener('click', function(event) {
            if (!searchInput.contains(event.target) && !searchResults.contains(event.target)) {
              searchResults.classList.add('hidden');
            }
          });
        </script>
      </body>
    </html>
